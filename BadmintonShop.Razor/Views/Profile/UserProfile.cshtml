@page "/profile"
@model BadmintonShop.Razor.Views.Profile.UserProfile

@{
    Layout = "_Shop";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <h1 class="mb-0">Welcome!</h1>
        </div>
        <div class="mt-3 mt-md-0">
            
        </div>
    </div>

    <!-- Profile and Location Information -->
    <div class="row mb-4">
        <!-- Personal Information -->
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="/placeholder.svg?height=120&width=120" alt="User Avatar" class="profile-avatar mb-3">
                        <h4 class="mb-0">Nguyen Van A</h4>
                        <p class="text-muted">Premium Customer</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">ID Number</p>
                            <p class="info-value">123456789012</p>
                        </div>
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">ID Issue Date</p>
                            <p class="info-value">15/04/2020</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">ID Issue Place</p>
                            <p class="info-value">Hanoi Police Department</p>
                        </div>
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">Phone Number</p>
                            <p class="info-value">+84 123 456 789</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <p class="text-black fw-bold info-label">Email</p>
                            <p class="info-value">nguyenvana@example.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Location Information -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>Location Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">Province</p>
                            <p class="info-value">Hanoi</p>
                        </div>
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">District</p>
                            <p class="info-value">Cau Giay</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">Ward</p>
                            <p class="info-value">Dich Vong Hau</p>
                        </div>
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">Street</p>
                            <p class="info-value">Tran Dang Ninh</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">House Number</p>
                            <p class="info-value">123</p>
                        </div>
                        <div class="col-md-6">
                            <p class="text-black fw-bold info-label">Postal Code</p>
                            <p class="info-value">100000</p>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12">
                            <p class="text-black fw-bold info-label">Full Address</p>
                            <p class="info-value">123 Tran Dang Ninh, Dich Vong Hau, Cau Giay, Hanoi, 100000</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transaction History -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-history me-2"></i>Transaction History
            </h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-8 mb-3 mb-md-0">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search transactions...">
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select" id="statusFilter">
                        <option value="all">All Statuses</option>
                        <option value="completed">Completed</option>
                        <option value="pending">Pending</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover" id="transactionTable">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Items</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="fw-bold">#1</td>
                        <td>2023-04-15</td>
                        <td>$120.50</td>
                        <td><span class="status-badge status-completed">Completed</span></td>
                        <td>3</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">#2</td>
                        <td>2023-04-10</td>
                        <td>$75.20</td>
                        <td><span class="status-badge status-completed">Completed</span></td>
                        <td>2</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">#3</td>
                        <td>2023-03-28</td>
                        <td>$210.99</td>
                        <td><span class="status-badge status-completed">Completed</span></td>
                        <td>5</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">#4</td>
                        <td>2023-03-15</td>
                        <td>$50.00</td>
                        <td><span class="status-badge status-pending">Pending</span></td>
                        <td>1</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">#5</td>
                        <td>2023-03-05</td>
                        <td>$180.75</td>
                        <td><span class="status-badge status-completed">Completed</span></td>
                        <td>4</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">#6</td>
                        <td>2023-02-20</td>
                        <td>$95.30</td>
                        <td><span class="status-badge status-cancelled">Cancelled</span></td>
                        <td>2</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">View</button>
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">#7</td>
                        <td>2023-02-10</td>
                        <td>$150.00</td>
                        <td><span class="status-badge status-completed">Completed</span></td>
                        <td>3</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">View</button>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Monthly Purchases
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="purchasesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Purchase Amount Trend
                    </h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="amountChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


